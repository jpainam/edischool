<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/single_layout"
    android:orientation="vertical"

    app:ignore="NamespaceTypo"
    android:background="@color/colorAccent_Translucent"
    android:layout_margin="2dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        android:id="@+id/cardView"
        >
        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/cardview_shadow_start_color"
            >
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imagepub"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/baseline_access_time_black_48" />

    <TextView
        android:id="@+id/textpub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"

        android:maxLength="@integer/google_play_services_version"
        android:text="uuuujjjjjjjjjk" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>